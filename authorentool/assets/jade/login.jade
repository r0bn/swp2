.container
    .row
        .col-md-4.col-centered
            .login-panel.panel.panel-default
                .panel-heading
                    h3.panel-title Password
                .panel-body
                    form(role="form")
                        fieldset
                            .form-group(ng-class="{'has-error' : isError}")
                                input.form-control(placeholder="Password",name="password",type="text",autofocus="",ng-model="targetCollection")
                            button.btn.btn-sm.btn-success(ng-click="login()") Login


