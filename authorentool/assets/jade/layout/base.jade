// # Basis Template HTML

// pattern library
include mixins

// HTML 5
doctype html
block vars
html
  head
    meta(charset="utf-8")
    meta(name="robots",content="noindex,nofollow")
    base(href="/")

    link(rel="icon" href="favicon.png")

    // AngularJS, Codemirror and styles are bundeld in one file 
    link(rel="stylesheet",href="build/vendor.css")
    script(src="build/vendor.js")
    // Googlemaps update. Muss so eingebunden werden, damit das Kontingent nicht voll l√§uft
    script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places")
    link(rel="stylesheet",href="build/main.css")
    link(rel="stylesheet",href="build/formular.css")

    title #{title} 

  // Bootstrap AngularJS
  body(ng-app="storyTellarApp")

    // Navigation Header
    .navbar.navbar-default
      .container-fluid
        .navbar-header
            a.navbar-brand(href="") Authorentool

    // Blocks to be extend
    block content
    block scripts 


