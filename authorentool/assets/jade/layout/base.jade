// # Basis Template HTML

// pattern library
include mixins

// HTML 5
doctype html
block vars
html
  head
    meta(charset="utf-8")

    link(rel="icon" href="favicon.png")

    // AngularJS, Codemirror and styles are bundeld in one file 
    link(rel="stylesheet",href="build/vendor.css")
    script(src="build/vendor.js")
    link(rel="stylesheet",href="build/main.css")

    title #{title} 

  // Bootstrap AngularJS
  body(ng-app="mainApp")

    // Navigation Header
    .navbar.navbar-default
      .container-fluid
        .navbar-header
            a.navbar-brand(href="") Authorentool

    // Blocks to be extend
    block content
    block scripts 


