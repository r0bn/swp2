                                                input.form-control(type="text", id="inChooserAnswerStorypointRef", placeholder="Chooser Answer STORYPOINTREF")
                                        .col-lg-2
                                            button.btn.btn-primary.btn-lg.pull-primary.btnDesign.btn-danger(id="btnChooserAnswerDelete", type='button')
