                                        .col-lg-6
                                            label.col-lg-2.control-label(id="lblQuizOnTrue", for="inQuizOnTrue") Quiz OnTrue
                                        .col-lg-6
                                            input.form-control(type="text", id="inQuizOnTrue", placeholder="Quiz On True StorypointRef")
                                    .form-group
                                        .col-lg-6
                                            label.col-lg-2.control-label(id="lblQuizOnFalse", for="inQuizOnFalse") Quiz OnFalse
                                        .col-lg-6
                                            input.form-control(type="text", id="inQuizOnFalse", placeholder="Quiz On False StorypointRef")
                                    .form-group
                                        .col-lg-6
                                            label.col-lg-2.control-label(id="lblQuizQuestion", for="inQuizQuestion") Question
