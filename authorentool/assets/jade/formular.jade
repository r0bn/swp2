                                        .col-lg-6
                                            input.form-control(type="text", id="inQuizID", placeholder="Quiz ID")   
                                    .form-group
                                        .col-lg-6
                                            label.col-lg-2.control-label(id="lblQuizStorypointRef", for="inQuizStorypointRef") StorypointRef
                                        .col-lg-6
                                            input.form-control(type="text", id="inQuizStorypointRef", placeholder="QUIZ STORYPOINTREF")
