.container-fluid
    .row
        .col-md-12
                ul.nav.nav-tabs(id="myTabs")
                    li(id="XMLTab")
                        a(ng-click="tabSwitch('XMLTab')", data-toggle="tab") XML Editor
                    li.active(id="GraEditorTab")
                        a(ng-click="tabSwitch('GraEditorTab')", data-toggle="tab") Graphischer Editor
                    li(id="MedienBibTab")
                        a(ng-click="tabSwitch('MedienBibTab')", data-toggle="tab") Medienbibliothek



                .tab-content(id="myTabContent")
                    .tab-pane.fade.active.in(id="GraEditor") 
                        include ./formular.jade
                    .tab-pane.fade.active.in(id="XML", style="display:none")
                        .row
                            .col-md-12
                                div(ui-codemirror,ui-codemirror-opts="editorOptions",ng-model="xmlFile",ui-refresh='codeMirrorUpdateUI')
                        .row
                            .col-md-8
                                | {{ xmlError }}
                            .col-md-4
                                button.btn.btn-primary.btn-lg.pull-right(ng-click="saveXML()") Save

                    .tab-pane.fade.active.in(id="MedienEditor", style="display:none")
                        include ./library.jade 
