extend layout/base

block vars
    - var title = "Welcome"

block scripts

block content
    .container-fluid(ng-app="mainApp",ng-controller="mainCtrl")
        .row
            .col-md-12
                    ul.nav.nav-tabs(id="myTabs")
                        li(id="XMLTab")
                            a(ng-click="tabbed_pain('XMLTab')", href="#XML", data-toggle="tab") XML Editor
                        li.active(id="GraEditorTab")
                            a(ng-click="tabbed_pain('GraEditorTab')",href="#GraEditor", data-toggle="tab") Graphischer Editor
                        li(id="MedienBibTab")
                            a(ng-click="tabbed_pain('MedienBibTab')", href="#MedienEditor", data-toggle="tab") Medienbibliothek



                    .tab-content(id="myTabContent")
                        .tab-pane.fade.active.in(id="GraEditor") 
                            include ./formular.jade
                        .tab-pane.fade.active.in(id="XML", style="display:none")
                            p hallo1
                        .tab-pane.fade.active.in(id="MedienEditor", style="display:none")
                            p hallo

