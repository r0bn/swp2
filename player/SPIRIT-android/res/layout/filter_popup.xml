<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff8976ff"

    >

    <Button
        android:id="@+id/getLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radiusSeekbar"
        android:text="@string/filtern"
        android:textColor="#FF000000" />

    <EditText
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:id="@+id/cityEditText"
        android:layout_below="@+id/cityTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLength="20"
        android:inputType="text"
        android:singleLine="true"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiusSeekbar"
        android:max="100"
        android:progress="50"
        android:layout_gravity="start|top"
        android:layout_alignRight="@+id/cityEditText"
        android:layout_alignEnd="@+id/cityEditText"
        android:layout_below="@+id/radiusEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/resetFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radiusSeekbar"
        android:layout_alignRight="@+id/radiusSeekbar"
        android:layout_alignTop="@+id/getLocation"

        android:text="@string/showAll"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/buzzword"
        android:id="@+id/cityTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/radius"
        android:id="@+id/radiusTextView"
        android:layout_below="@+id/cityEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiusEditText"
        android:layout_below="@+id/radiusTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/seekbarStartvalue"
        android:inputType="number"
        android:layout_alignRight="@+id/getLocation"
        android:layout_alignEnd="@+id/getLocation"
        android:maxLength="5"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/km"
        android:id="@+id/kmTextView"
        android:layout_toLeftOf="@+id/resetFilter"
        android:layout_toStartOf="@+id/resetFilter" 
        android:layout_below="@+id/radiusTextView"
        android:layout_toRightOf="@+id/radiusEditText"
        android:layout_toEndOf="@+id/radiusEditText" />

</RelativeLayout>

